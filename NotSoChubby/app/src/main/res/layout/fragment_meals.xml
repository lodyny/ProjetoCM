<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/fgm_decreaseButton"
        android:layout_width="58dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:background="#019ae8"
        android:text="-"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/rvMeals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fgm_increaseButton"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:background="#019ae8"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/rvMeals"
        app:layout_constraintStart_toEndOf="@+id/fgm_calories"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fgm_calories"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:text="3000"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/rvMeals"
        app:layout_constraintStart_toEndOf="@+id/fgm_decreaseButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fgm_runButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#019ae8"
        android:text="@string/fgm_meals_run"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBottom_toTopOf="@+id/rvMeals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fgm_increaseButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fgm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/fgm_meals_title"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/fgm_calories"
        app:layout_constraintEnd_toEndOf="@+id/fgm_calories"
        app:layout_constraintStart_toStartOf="@+id/fgm_calories"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMeals"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

